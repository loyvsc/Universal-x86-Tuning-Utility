                                    <Slider Name="sdIntelPL2" Value="{Binding ElementName=nudIntelPL2, Path=Value}" Maximum="400" Minimum="8" Grid.Column="2" Margin="12,0,0,0" TickFrequency="25" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ui:CardExpander>
                    <ui:CardExpander
            Margin="0,8,15,0"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Flash20"
                        Name="sdAmdApuVRM">
                        <ui:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
