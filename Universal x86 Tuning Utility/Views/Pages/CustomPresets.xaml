<UserControl x:Class="Universal_x86_Tuning_Utility.Views.Pages.CustomPresets"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Universal_x86_Tuning_Utility.Views.Pages"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:viewmodels="clr-namespace:Universal_x86_Tuning_Utility.ViewModels"
             xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewmodels:CustomPresetsViewModel}"
             d:DesignHeight="2500"
             d:DesignWidth="800"
             d:Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <DockPanel>
            <TextBlock
            FontSize="26"
            FontWeight="Medium"
            Text="Custom Presets" 
            DockPanel.Dock="Top" 
            Margin="18,10,0,0"/>

            <DockPanel DockPanel.Dock="Top" Margin="18,9,18,0">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" HorizontalAlignment="Left">
                    <TextBlock FontSize="17" 
                               FontWeight="Medium" 
                               Margin="0,0,12,0" 
                               VerticalAlignment="Center"
                               Text="Saved Presets:"/>
                    <ComboBox Width="225" 
                              Name="cbxPowerPreset"
                              SelectionChanged="cbxPowerPreset_SelectionChanged" 
                              Height="37"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" 
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right">
                    <TextBlock FontSize="17"
                               FontWeight="Medium"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               Text="New Preset Name:"/>
                    <TextBox Name="tbxPresetName"
                             Margin="0,0,-2,0"
                             Width="225"
                             Height="35"/>
                </StackPanel>
            </DockPanel>

            <StackPanel Orientation="Horizontal" 
                        DockPanel.Dock="Bottom" 
                        HorizontalAlignment="Right"
                        Margin="0,9,9,6">
                <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,9,9" 
                        Height="40" 
                        DockPanel.Dock="Bottom"
                        Width="50"
                        IsVisible="{Binding UndoActionAvailable, UpdateSourceTrigger=PropertyChanged}"
                        ToolTip.Tip="Undo overclock settings"
                        Command="{Binding UndoCommand}">
                    <ui:SymbolIcon Symbol="Sync" FontSize="24"/>
                </Button>
                <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,9,9"
                        Height="40"
                        DockPanel.Dock="Bottom" 
                        Width="50"
                        ToolTip.Tip="Reload settings of current preset values" 
                        Command="{Binding ReloadPresetValuesCommand}">
                    <ui:SymbolIcon Symbol="Sync" FontSize="24"/>
                </Button>
                <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,9,9" 
                        Height="40"
                        DockPanel.Dock="Bottom" 
                        Width="50"
                        ToolTip.Tip="Delete current settings preset"
                        Command="{Binding DeletePresetCommand}">
                    <ui:SymbolIcon Symbol="Delete" FontSize="24"/>
                </Button>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center" 
                        Margin="0,0,9,9" 
                        Height="40"
                        DockPanel.Dock="Bottom" 
                        Width="50" 
                        ToolTip.Tip="Save current settings as new preset"
                        Command="{Binding SavePresetCommand}">
                    <ui:SymbolIcon Symbol="SaveFilled" FontSize="24"/>
                </Button>
                <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,9,9"
                        Height="40"
                        Width="50"
                        DockPanel.Dock="Bottom"
                        ToolTip.Tip="Apply current settings"
                        Command="{Binding ApplyPresetCommand}">
                    <ui:SymbolIcon Symbol="Document" FontSize="24"/>
                </Button>
            </StackPanel>

            <ScrollViewer Name="mainScroll"
                          Margin="0,9,0,0" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto" 
                          CanContentScroll="False" 
                          PanningMode="VerticalFirst" 
                          Stylus.IsFlicksEnabled="False" 
                          Stylus.IsTouchFeedbackEnabled="True" 
                          IsDeferredScrollingEnabled="False" 
                          ScrollChanged="mainScroll_ScrollChanged">
                <StackPanel Name="mainCon" Margin="15,0,0,0">
                    <ui:CardExpander Name="sdAmdApuThermal"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Temperature20" Margin="0,0,15,0">
                        <ui:CardExpander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Text="APU Temperature Tuning" />
                                    <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="Provides the ability to set APU thermal targets."/>
                                </StackPanel>
                            </Grid>
                        </ui:CardExpander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">Temperature Limit (°C)</TextBlock>
                                    <ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip.Tip="Controls the temperature limit at which the APU starts soft throttling" VerticalAlignment="Bottom" />
                                </StackPanel>
                                
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="33" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Name="cbAPUTemp"/>
                                    <ui:NumberBox Name="nudAPUTemp" Text="{Binding ElementName=sdAPUTemp, Path=Value}" Value="{Binding ElementName=sdAPUTemp, Path=Value}" Maximum="105" Minimum="10" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
                                    <Slider Name="sdAPUTemp" Value="{Binding ElementName=nudAPUTemp, Path=Value}" Maximum="105" Minimum="10" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">Skin Temperature Limit (°C)</TextBlock>
                                    <ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip.Tip="Controls the laptop chassis temperature limit at which the APU starts throttling" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="33" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Name="cbAPUSkinTemp"/>
                                    <ui:NumberBox Name="nudAPUSkinTemp" Text="{Binding ElementName=sdAPUSkinTemp, Path=Value}" Value="{Binding ElementName=sdAPUSkinTemp, Path=Value}" Maximum="105" Minimum="8" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
                                    <Slider Name="sdAPUSkinTemp" Value="{Binding ElementName=nudAPUSkinTemp, Path=Value}" Maximum="105" Minimum="8" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
                                </Grid>
                            </StackPanel>

                        </StackPanel>
                    </ui:CardExpander>
                    <ui:CardExpander Name="sdAmdCpuThermal"
            Margin="0,8,15,0"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Temperature20">
