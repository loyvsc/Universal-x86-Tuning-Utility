                                    <ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip.Tip="Controls the APU's Skin Temperature Aware Power Management power limit" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
