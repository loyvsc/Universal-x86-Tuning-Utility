<UserControl x:Class="Universal_x86_Tuning_Utility.Views.Pages.CustomPresetsPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ic="using:FluentAvalonia.FluentIcons"
             xmlns:viewmodels="clr-namespace:Universal_x86_Tuning_Utility.ViewModels"
             xmlns:models="clr-namespace:ApplicationCore.Models;assembly=ApplicationCore"
             xmlns:controls="clr-namespace:Universal_x86_Tuning_Utility.Controls"
             mc:Ignorable="d"
             x:DataType="viewmodels:CustomPresetsViewModel"
             d:DesignHeight="2500"
             d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <TextBlock FontSize="26"
                       FontWeight="Medium"
                       Text="Custom Presets"
                       DockPanel.Dock="Top"
                       Margin="18,10,0,0" />

            <DockPanel DockPanel.Dock="Top"
                       Margin="18,9,18,0">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left"
                            HorizontalAlignment="Left">
                    <TextBlock FontSize="17"
                               FontWeight="Medium"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               Text="Saved Presets:" />
                    <ComboBox Width="225"
                              ItemsSource="{Binding AvailablePresets, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValue="{Binding SelectedPreset, UpdateSourceTrigger=PropertyChanged}"
                              Height="37" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right">
                    <TextBlock FontSize="17"
                               FontWeight="Medium"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               Text="New Preset Name:" />
                    <TextBox Margin="0,0,-2,0"
                             Width="225"
                             Height="35"
                             Text="{Binding SelectedPreset.Name, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </DockPanel>

            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0,9,9,6">
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,9,9"
                        Height="40"
                        DockPanel.Dock="Bottom"
                        Width="50"
                        IsVisible="{Binding UndoActionAvailable, UpdateSourceTrigger=PropertyChanged}"
                        ToolTip.Tip="Undo overclock settings"
                        Command="{Binding UndoCommand}">
                    <ui:SymbolIcon Symbol="Sync" FontSize="24" />
                </Button>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,9,9"
                        Height="40"
                        DockPanel.Dock="Bottom"
                        Width="50"
                        ToolTip.Tip="Reload settings of current preset values"
                        Command="{Binding ReloadPresetValuesCommand}">
                    <ui:SymbolIcon Symbol="Sync" FontSize="24" />
                </Button>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,9,9"
                        Height="40"
                        DockPanel.Dock="Bottom"
                        Width="50"
                        ToolTip.Tip="Delete current settings preset"
                        Command="{Binding DeletePresetCommand}">
                    <ui:SymbolIcon Symbol="Delete" FontSize="24" />
                </Button>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,9,9"
                        Height="40"
                        DockPanel.Dock="Bottom"
                        Width="50"
                        ToolTip.Tip="Save current settings as new preset"
                        Command="{Binding SavePresetCommand}">
                    <ui:SymbolIcon Symbol="SaveFilled" FontSize="24" />
                </Button>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,9,9"
                        Height="40"
                        Width="50"
                        DockPanel.Dock="Bottom"
                        ToolTip.Tip="Apply current settings"
                        Command="{Binding ApplyPresetCommand}">
                    <ui:SymbolIcon Symbol="Document" FontSize="24" />
                </Button>
            </StackPanel>

            <ScrollViewer Margin="0,9,0,0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          IsDeferredScrollingEnabled="False">
                <StackPanel Margin="15,0,0,0">
                    <!-- Amd Apu Thermal settings !-->
                    <Expander Margin="0,0,15,0"
                              IsVisible="{Binding IsAmdApuSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel Grid.Column="0"
                                        VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Temperature20Regular}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Text="APU Temperature Tuning" />
                                <TextBlock
                                    FontSize="12"
                                        Text="Provides the ability to set APU thermal targets." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="Temperature Limit (°C)" />
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the temperature limit at which the APU starts soft throttling"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>

                                <Grid ColumnDefinitions="33, 150, *"
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuTemp, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.ApuTemperature, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="105"
                                                  Minimum="10"
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Value="{Binding SelectedPreset.ApuTemperature, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="105"
                                            Minimum="10"
                                            TickFrequency="1"
                                            VerticalAlignment="Center"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="Skin Temperature Limit (°C)" />
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the laptop chassis temperature limit at which the APU starts throttling"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *"
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuSkinTemp, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.ApuSkinTemperature, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="105"
                                                  Minimum="8"
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Value="{Binding SelectedPreset.ApuSkinTemperature, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="105"
                                            Minimum="8"
                                            Margin="12,0,0,0"
                                            TickFrequency="1"
                                            VerticalAlignment="Center"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Amd cpu thermal settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsAmdCpuThermalSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel Grid.Column="0" 
                                        VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Temperature20Regular}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Text="CPU Temperature Tuning" />
                                <TextBlock
                                    FontSize="12"
                                    Text="Provides the ability to set CPU thermal targets." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="Temperature Limit (°C)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   VerticalAlignment="Bottom"
                                                   ToolTip.Tip="Controls the temperature limit at which the CPU starts hard throttling" />
                                </StackPanel>

                                <Grid ColumnDefinitions="33, 150, *" Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsDtCpuTemp, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.DtCpuTemperature, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="95"
                                                  Minimum="10"
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Value="{Binding SelectedPreset.DtCpuTemperature, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="95"
                                            Minimum="10"
                                            Margin="12,0,0,0"
                                            TickFrequency="1"
                                            VerticalAlignment="Center"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Amd apu cpu settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsAmdApuSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel Grid.Column="0" 
                                        VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Power20Regular}" />
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="APU Power Tuning" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to set APU power targets." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="STAPM Power Limit (W)" />
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the APU's Skin Temperature Aware Power Management power limit"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *"
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuStapmPow, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.ApuStapmPower, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="300"
                                                  Minimum="5"
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Value="{Binding SelectedPreset.ApuStapmPower, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="300"
                                            Minimum="5"
                                            Margin="12,0,0,0"
                                            TickFrequency="1"
                                            VerticalAlignment="Center"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="Slow Power Limit (W)" />
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the APU's slow boost duration power limit. Within SmartShift enabled systems, this options controls the total power shared between the AMD CPU and AMD dGPU"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *" Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuSlowPow, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.ApuSlowPower, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="300"
                                                  Minimum="5"
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Value="{Binding SelectedPreset.ApuSlowPower, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="300"
                                            Minimum="5"
                                            Margin="12,0,0,0"
                                            TickFrequency="1"
                                            VerticalAlignment="Center"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="Slow Boost Duration (s)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   VerticalAlignment="Bottom"
                                                   ToolTip.Tip="Controls how long the APU stays within the slow boost power limit" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *" 
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuSlowTime, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Value="{Binding SelectedPreset.ApuSlowTime, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="1024"
                                                  Minimum="2" Grid.Column="1" SmallChange="1" />
                                    <Slider Value="{Binding SelectedPreset.ApuSlowTime, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="1024"
                                            Minimum="2" Grid.Column="2" Margin="12,0,0,0"
                                            TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>

                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="Fast Power Limit (W)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" 
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the APU's fast boost duration power limit. Within SmartShift enabled systems, this options controls the total power shared between the AMD CPU and AMD dGPU"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *"
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuFastPow, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.ApuFastPower, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="300"
                                                  Minimum="5"
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Value="{Binding SelectedPreset.ApuFastPower, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="300" 
                                            Minimum="5"
                                            Margin="12,0,0,0"
                                            TickFrequency="1" 
                                            VerticalAlignment="Center"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="Fast Boost Duration (s)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls how long the APU stays within the fast boost power limit"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *"
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuStapmTime, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.ApuStapmTime, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="1024"
                                                  Minimum="2" 
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Value="{Binding SelectedPreset.ApuStapmTime, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="1024"
                                            Minimum="2"
                                            TickFrequency="1" 
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Amd cpu settings !-->
                    <Expander Margin="0,8,15,0"
                        IsEnabled="True"
                        IsExpanded="False"
                        IsVisible="{Binding IsAmdCpuSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Power20Regular}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Text="CPU Power Tuning" />
                                <TextBlock
                                    FontSize="12"
                                        Text="Provides the ability to set CPU power targets." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" 
                                               FontSize="13"
                                               Text="PPT Limit (W)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the CPU's Package Power Tracking power limit"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *"
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsDtCpuPpt, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.DtCpuPpt, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="300"
                                                  Minimum="8" 
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Margin="12,0,0,0" 
                                            Value="{Binding SelectedPreset.DtCpuPpt, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="300"
                                            Minimum="8" 
                                            TickFrequency="1"
                                            VerticalAlignment="Center" 
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" 
                                               FontSize="13"
                                               Text="EDC Limit (A)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the CPU's Electrical Design Current limit"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *" 
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsDtCpuEdc, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.DtCpuEdc, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="900"
                                                  Minimum="8" 
                                                  SmallChange="25" />
                                    <Slider Grid.Column="2" 
                                            Margin="12,0,0,0"
                                            Value="{Binding SelectedPreset.DtCpuEdc, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="900"
                                            Minimum="8"
                                            TickFrequency="25"
                                            VerticalAlignment="Center" 
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="TDC Limit (A)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the CPU's Thermal Design Current limit"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *" 
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsDtCpuTdc, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.DtCpuTdc, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="900"
                                                  Minimum="8" 
                                                  SmallChange="25" />
                                    <Slider Grid.Column="2"
                                            Margin="12,0,0,0"
                                            Value="{Binding SelectedPreset.DtCpuTdc, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="900"
                                            Minimum="8" 
                                            TickFrequency="25"
                                            VerticalAlignment="Center"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Intel cpu settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsIntelSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Power20Regular}" />
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="CPU Power Tuning" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to set CPU power targets." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" 
                                               FontSize="13"
                                               Text="Power Limit (W)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the CPU's total power limit"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *" 
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsIntelPl1, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.IntelPl1, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="400"
                                                  Minimum="8" 
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center" 
                                            Value="{Binding SelectedPreset.IntelPl1, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="400"
                                            Minimum="8"
                                            TickFrequency="1" 
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0"
                                        IsVisible="False">
                                <!-- todo: Why not visible? !-->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" 
                                               FontSize="13"
                                               Text="Power Limit 2 (W)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" 
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the CPU's short boost power limit"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *" Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsIntelPl2, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.IntelPl2, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="400"
                                                  Minimum="8" 
                                                  SmallChange="25" />
                                    <Slider Grid.Column="2" 
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Value="{Binding SelectedPreset.IntelPl2, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="400" 
                                            Minimum="8" 
                                            TickFrequency="25"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Amd apu vrm settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsAmdApuVrmSettingAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Flash20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="APU VRM Tuning" />
                                <TextBlock FontSize="12"
                                              Text="Provides the ability to set APU VRM current targets." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" 
                                               FontSize="13"
                                               Text="CPU TDC Limit (A)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" 
                                                   Margin="6,0,0,-2"
                                                   VerticalAlignment="Bottom" 
                                                   ToolTip.Tip="Controls the CPU's Thermal Design Current limit"/>
                                </StackPanel>
                                <Grid ColumnDefinitions="33, 150, *"
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsApuCpuTdc, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.ApuCpuTdc, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="300"
                                                  Minimum="8" 
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Margin="12,0,0,0"
                                            Value="{Binding SelectedPreset.ApuCpuTdc, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="300"
                                            Minimum="8" 
