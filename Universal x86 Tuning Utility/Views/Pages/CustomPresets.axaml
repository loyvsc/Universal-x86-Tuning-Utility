                            <Grid ColumnDefinitions="*, Auto">
                                <StackPanel Grid.Column="0"
                                            VerticalAlignment="Center">
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Pulse20Regular}" />
                                    <TextBlock FontSize="14"
                                               FontWeight="Medium"
                                               Text="AMD Ryzen™ CPU Tuning" />
                                    <TextBlock FontSize="12"
                                               Text="Provides the ability to set tune your AMD Ryzen™ CPU." />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="1">
                                    <ToggleSwitch Margin="0,0,9,0"
                                                  IsChecked="{Binding SelectedPreset.IsAmdOc, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="CPU Clocks (MHz)" />
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   ToolTip.Tip="Provides the ability to set a static CPU clock"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>

                                <Grid ColumnDefinitions="150, *"
                                      Margin="0,8,0,0">
                                    <ui:NumberBox Grid.Column="0"
                                                  Value="{Binding SelectedPreset.AmdClock, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="8000"
                                                  Minimum="400"
                                                  SmallChange="25" />
                                    <Slider Grid.Column="1"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Value="{Binding SelectedPreset.AmdClock, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="8000"
                                            Minimum="400"
                                            TickFrequency="25"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" 
                                               FontSize="13"
                                               Text="CPU VID (mV)"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" Margin="6,0,0,-2"
                                                   ToolTip.Tip="Controls the set voltage for the CPU"
                                                   VerticalAlignment="Bottom" />
                                </StackPanel>

                                <Grid ColumnDefinitions="150, *"
                                      Margin="0,8,0,0">
                                    <ui:NumberBox Grid.Column="0"
                                                  Value="{Binding SelectedPreset.AmdVid, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="1450"
                                                  Minimum="512" 
                                                  SmallChange="25" />
                                    <Slider Grid.Column="1"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Value="{Binding SelectedPreset.AmdVid, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="1450" 
                                            Minimum="512"
                                            TickFrequency="25" 
                                            IsSnapToTickEnabled="True" />
                                </Grid>

                                <TextBlock FontSize="12"
                                           Margin="0,8,0,0"
                                           Text="Warning: We are not liable for any damages to hardware or resulting instabilities caused by adjustment of frequencies and voltages."
                                           TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Amd pbo settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsAmdPboSettingAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon TopSpeed20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="AMD Precision Boost Overdrive" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to customise PBO options." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold"
                                               FontSize="13"
                                               Text="PBO Scalar"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                   Margin="6,0,0,-2"
                                                   VerticalAlignment="Bottom" 
                                                   ToolTip.Tip="Allows control to change the PBO Scalar which adjusts the FIT/FITness/FailuresInTime limit by the set amount"/>
                                </StackPanel>

                                <Grid ColumnDefinitions="33, 150, *" 
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsPboScalar, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.PboScalar, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="10"
                                                  Minimum="1" 
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Value="{Binding SelectedPreset.PboScalar, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="10"
                                            Minimum="1" 
                                            TickFrequency="1"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Amd Curve optimizer settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsAmdCOSettingAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon TopSpeed20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="AMD Curve Optimiser" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to customise Curve Optimiser options." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <StackPanel>
                            <StackPanel Margin="0,-8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="DemiBold" 
                                               FontSize="13"
                                               Text="All Core Offset"/>
                                    <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" 
                                                   Margin="6,0,0,-2"
                                                   VerticalAlignment="Bottom" 
                                                   ToolTip.Tip="Allows control to change the all core Curve Optimiser Frequency/Voltage curve offset"/>
                                </StackPanel>

                                <Grid ColumnDefinitions="33, 150, *" 
                                      Margin="0,8,0,0">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding SelectedPreset.IsCoAllCore, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:NumberBox Grid.Column="1"
                                                  Value="{Binding SelectedPreset.CoAllCore, UpdateSourceTrigger=PropertyChanged}"
                                                  Maximum="30"
                                                  Minimum="-50" 
                                                  SmallChange="1" />
                                    <Slider Grid.Column="2"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Value="{Binding SelectedPreset.CoAllCore, UpdateSourceTrigger=PropertyChanged}"
                                            Maximum="30" 
                                            Minimum="-50" 
                                            TickFrequency="1"
                                            IsSnapToTickEnabled="True" />
                                </Grid>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,8,0,0">
                                        <TextBlock FontWeight="DemiBold" 
                                                   FontSize="13"
                                                   Text="iGPU Offset"/>
                                        <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}" 
                                                       Margin="6,0,0,-2"
                                                       ToolTip.Tip="Allows control to change the iGPU Curve Optimiser Frequency/Voltage curve offset"
                                                       VerticalAlignment="Bottom" />
                                    </StackPanel>
                                    <Grid ColumnDefinitions="33,150,*" 
                                          Margin="0,8,0,0" >
                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding SelectedPreset.IsCoGfx, UpdateSourceTrigger=PropertyChanged}" />
                                        <ui:NumberBox Grid.Column="1" 
                                                      Value="{Binding SelectedPreset.CoGfx, UpdateSourceTrigger=PropertyChanged}"
                                                      Maximum="30"
                                                      Minimum="-50"
                                                      SmallChange="1" />
                                        <Slider Grid.Column="2"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center"
                                                Value="{Binding SelectedPreset.CoGfx, UpdateSourceTrigger=PropertyChanged}"
                                                Maximum="30"
                                                Minimum="-50"
                                                TickFrequency="1"
                                                IsSnapToTickEnabled="True" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Amd CCD1 settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsAmdCCD1COSettingAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon TopSpeed20Regular}" />
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="AMD Per-Core Curve Optimiser (CCD1)" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to customise per-core Curve Optimiser options." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <ItemsControl
                            ItemsSource="{Binding SelectedPreset.Ccd1States, UpdateSourceTrigger=PropertyChanged}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:AmdCcdCoreState}">
                                    <StackPanel Margin="0,-8,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontWeight="DemiBold"
                                                       FontSize="13"
                                                       Text="{Binding CoreIndex, StringFormat={}Core {0} Offset}" />
                                            <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                           Margin="6,0,0,-2"
                                                           ToolTip.Tip="{Binding CoreIndex, StringFormat={}Allows control to change the Curve Optimiser Frequency/Voltage curve offset for core {1}}"
                                                           VerticalAlignment="Bottom" />
                                        </StackPanel>

                                        <Grid ColumnDefinitions="33, 150, *"
                                              Margin="0,8,0,0">
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged}" />

                                            <ui:NumberBox Grid.Column="1"
                                                          Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                          Maximum="30"
                                                          Minimum="-50"
                                                          SmallChange="1" />
                                            <Slider Grid.Column="2"
                                                    Margin="12,0,0,0"
                                                    Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                    Maximum="30"
                                                    Minimum="-50"
                                                    TickFrequency="1"
                                                    VerticalAlignment="Center"
                                                    IsSnapToTickEnabled="True" />
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- Amd CCD2 settings !-->
                    <Expander Margin="0,8,15,0"
                              IsVisible="{Binding IsAmdCCD2COSettingAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Expander.Header>
                            <StackPanel VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon TopSpeed20Regular}" />
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="AMD Per-Core Curve Optimiser (CCD2)" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to customise per-core Curve Optimiser options." />
                            </StackPanel>
                        </Expander.Header>
                        <!--  CardExpander content  -->
                        <ItemsControl
                            ItemsSource="{Binding SelectedPreset.Ccd2States, UpdateSourceTrigger=PropertyChanged}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:AmdCcdCoreState}">
                                    <StackPanel Margin="0,-8,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontWeight="DemiBold"
                                                       FontSize="13"
                                                       Text="{Binding CoreIndex, StringFormat={}Core {0} Offset}" />
                                            <ui:SymbolIcon Symbol="{ic:FluentIcon Info20Regular}"
                                                           Margin="6,0,0,-2"
                                                           ToolTip.Tip="{Binding CoreIndex, StringFormat={}Allows control to change the Curve Optimiser Frequency/Voltage curve offset for core {1}}"
                                                           VerticalAlignment="Bottom" />
                                        </StackPanel>

                                        <Grid ColumnDefinitions="33, 150, *"
                                              Margin="0,8,0,0">
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged}" />

                                            <ui:NumberBox Grid.Column="1"
                                                          Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                          Maximum="30"
                                                          Minimum="-50"
                                                          SmallChange="1" />
                                            <Slider Grid.Column="2"
                                                    Margin="12,0,0,0"
                                                    Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                    Maximum="30"
                                                    Minimum="-50"
                                                    TickFrequency="1"
                                                    VerticalAlignment="Center"
                                                    IsSnapToTickEnabled="True" />
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- Amd power (boost) profile settings !-->
                    <controls:CardControl Margin="0,8,15,0"
                                          IsVisible="{Binding IsAmdPowerProfileSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Grid.Column="0"
                                        VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon FastAcceleration20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="AMD Boost Profile" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to set a manual boost profile which impact on boost delay." />
                            </StackPanel>
                            <ComboBox Grid.Column="1"
                                      VerticalAlignment="Center"
                                      SelectedIndex="{Binding SelectedPreset.BoostProfile, UpdateSourceTrigger=PropertyChanged}"
                                      MinWidth="164" 
                                      Height="37">
                                <!-- todo: refact this.  !-->
                                <ComboBoxItem>Auto</ComboBoxItem>
                                <ComboBoxItem>Power Saving</ComboBoxItem>
                                <ComboBoxItem>Performance</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </controls:CardControl>

                    <!-- Display settings !-->
                    <controls:CardControl Margin="0,8,15,0"
                                          IsVisible="{Binding IsChangeRefreshRateAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Desktop20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="Display Refresh Rate" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to set a custom supported display refresh rate. May not work for everyone!" />
                            </StackPanel>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding RefreshRates, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValue="{Binding SelectedPreset.DisplayHz, UpdateSourceTrigger=PropertyChanged}"
                                      VerticalAlignment="Center"
                                      SelectedIndex="0"
                                      MinWidth="164"
                                      Height="37" />
                        </Grid>
                    </controls:CardControl>

                    <!-- Power mode settings !-->
                    <controls:CardControl Margin="0,8,15,0">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Power20Regular}" />
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="Windows Power Mode" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to change the Windows power mode from a preset." />
                            </StackPanel>
                            <ComboBox Grid.Column="1"
                                      VerticalAlignment="Center"
                                      SelectedIndex="{Binding SelectedPreset.PowerMode, UpdateSourceTrigger=PropertyChanged}"
                                      MinWidth="164"
                                      Height="37">
                                <!-- todo: refact this.  !-->
                                <ComboBoxItem>
                                    System Controlled
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    Best Power Effciency
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    Balanced
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    Best Performance
                                </ComboBoxItem>
                            </ComboBox>

                        </Grid>
                    </controls:CardControl>

                    <!-- Asus power settings !-->
                    <controls:CardControl Margin="0,8,15,0" 
                                          IsVisible="{Binding IsAsusPowerSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Grid.Column="0"
                                        VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon Power20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="ASUS Power Profile" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to set an ASUS power profile. This will override Armoury Crate!" />
                            </StackPanel>
                            <ComboBox Grid.Column="1"
                                      VerticalAlignment="Center"
                                      SelectedValue="{Binding SelectedAsusPowerProfile, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding AsusPowerProfiles, UpdateSourceTrigger=PropertyChanged}"
                                      MinWidth="164"
                                      Height="37">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:AsusPowerProfile}">
                                        <Label Content="{Binding Title}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </controls:CardControl>

                    <!-- Asus gpu mode !-->
                    <controls:CardControl Margin="0,8,15,0"
                                          IsVisible="{Binding IsAsusGpuUltimateSettingsAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Grid.Column="0"
                                        VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon FastAcceleration20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="ASUS GPU Ultimate Mode" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to manually toggle MUX switch on/off. This will override Armoury Crate!" />
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <ToggleSwitch IsChecked="{Binding SelectedPreset.IsAsusGpuUlti, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,9,0" />
                            </StackPanel>
                        </Grid>
                    </controls:CardControl>

                    <!-- Asus eco-mode settings !-->
                    <controls:CardControl Margin="0,8,15,0"
                                          IsVisible="{Binding IsAsusEcoModeAvailable, UpdateSourceTrigger=PropertyChanged}">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Grid.Column="0"
                                        VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="{ic:FluentIcon LeafTwo20Regular}"/>
                                <TextBlock FontSize="14"
                                           FontWeight="Medium"
                                           Text="ASUS iGPU Only Mode" />
                                <TextBlock FontSize="12"
                                           Text="Provides the ability to toggle iGPU only mode on/off. This will override Armoury Crate!" />
                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <ToggleSwitch IsChecked="{Binding SelectedPreset.AsusIGpu, UpdateSourceTrigger=PropertyChanged}"
                                              Margin="0,0,9,0" />
                            </StackPanel>
                        </Grid>
                    </controls:CardControl>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>