    <Grid ColumnDefinitions="448*, 39*, 13*, 40*"
          RowDefinitions="Auto, *">
        <Grid x:Name="RootMainGrid"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="4"
              ColumnDefinitions="Auto,*">

            <ui:NavigationView AlwaysShowHeader="False"
                               PaneDisplayMode="Left"
                               Grid.RowSpan="2"
                               Name="NavView"
                               IsSettingsVisible="False"
                               IsBackEnabled="{Binding #FrameView.CanGoBack}"/>
            <!--  We display our pages inside this element.  -->
            <Border Grid.Column="1"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <ui:Frame Name="FrameView" />
